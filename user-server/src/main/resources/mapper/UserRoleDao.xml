<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xufq.userserver.dao.UserRoleDao">
    <insert id="saveUser" parameterType="com.xufq.userserver.entity.UserRoleEntity">
        <selectKey resultType="java.lang.Integer" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_user_role(user_id, role_id, deleted)
        values(#{userId}, #{roleId}, #{deleted})
    </insert>

    <update id="updateUserRole" parameterType="com.xufq.userserver.entity.UserRoleEntity">
        update t_user_role
        <set>
            <if test="roleId != null and roleId !=''">
                role_id = #{roleId}
            </if>
            <if test="deleted != null and deleted != ''">
                ,deleted = #{deleted}
            </if>
        </set>
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="userId != null and userId !=''">
                and user_id = #{userId}
            </if>
        </where>
    </update>
</mapper>